<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ObjectStyle" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="ViewStyleKey" parent="@style/ObjectStyle">
        <item name="android:layout_width">300dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="EditStyleValue" parent="@style/ObjectStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingLeft">10dip</item>
        
    </style>
    <style name="Edit2StyleValue" parent="@style/ObjectStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="RelativeStyle" parent="@style/ObjectStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="HeadRealativeStyle" parent="@style/ObjectStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="CheckStyle" parent="@style/ObjectStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="CheckStyleSelected" parent="@style/ObjectStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ECGViewStyle" parent="@style/ObjectStyle">
        <item name="android:layout_width">80dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="ECGValueStyle" parent="@style/EditStyleValue">
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="ECGSeekStyle" parent="@style/ECGViewStyle">
        <item name="android:paddingTop">0dp</item>
        
    </style>
    <style name="FrameStyle" parent="@style/ObjectStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="CustomSeekBar" parent="@style/ECGViewStyle">
  <!--  <item name="android:progressDrawable">@drawable/custom_seek_bar</item> -->
    <item name="android:thumb">@drawable/seek_bar_thumb</item> 
  <!--  <item name="android:thumbOffset">0dip</item> -->
</style>

    <style name="Theme.Sherlock.Fullscreen" parent="Theme.Sherlock.NoActionBar">
        <item name="android:windowFullscreen">true</item>;
 	</style>
    
    <style name="slider_panel">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:button">@null</item>
	    <item name="android:gravity">center_horizontal</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:textSize">12dp</item>
  	</style>
    
</resources>
